# Environment Configuration for code2markdown
# Copy this file to .env and modify the values as needed

# Application Configuration
ENVIRONMENT=production
APP_NAME=code2markdown
APP_VERSION=1.0.0

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_ENABLECORS=false
STREAMLIT_SERVER_ENABLECSRF_PROTECTION=true
STREAMLIT_SERVER_MAXUPLOADSIZE=200

# Database Configuration
DATABASE_URL=sqlite:///app/data/code2markdown.db
SQLITE_DB_PATH=/app/data/code2markdown.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=/app/logs
LOG_FILE=/app/logs/code2markdown.log

# Data Configuration
DATA_DIR=/app/data
TEMP_DIR=/app/temp

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=code2markdown-network

# Development Configuration
DEBUG=false
RELOAD=false
VERBOSE=false

# Production Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2